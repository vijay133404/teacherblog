<h1>Listing teachers</h1>
 <th><%= link_to 'New teachers', new_teacher_path %></th>
<table>
  <tr>
    <th>title</th>
    <th>description</th>
    <th>image</th>
     
  </tr>
    <tbody>
  <% @teachers.each do |teacher| %>
    <tr>
      <td><%= teacher.title %></td>
      <td><%= teacher.description%></td>
      <td><%= image_tag teacher.image, :height=>"200",:width=>"200" %></td>

      <td><%= link_to 'Show', teacher_path(teacher) %></td>
      <% if current_user.id == teacher.user_id =%>
      <td><%= link_to 'edit', edit_teacher_path(teacher) %></td>
      <td><%= link_to 'delete', teacher_path(teacher),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
        <% end %> 
    </tr>
     </tbody>
  <% end %>
</table>
